//color scheme
//inspired by the black white and teal colors for Uber
black = #0e0e0e;
grey = #272727;
lightTeal = #1fbad6;
mint = #38b0af;
red = #BD4242;
darkRed = #790D0D;

//base case, mobile first dimensions
font_size = 18;
field_width = 300;
box_spacing = 5;
tile_size = (field_width / 9) - box_spacing;

html, body {
  position:relative;
  margin: 0;
  padding: 0;
  color: black;
  font-family: "Clear Sans", "Helvetica Neue", Arial, sans-serif;
  font-size: font_size px; 
}

.container{
  width: field_width px;
  margin-left: auto;
  margin-right: auto;
}
// #headline{
