header{
  color: black;
  text-align: center;
}

//CSS trick to have faded background text. 
.backgroundText{
  margin-top: -(font_size*5) px;
  color: gray;
  opacity: 0.2;
  z-index:-1;
  text-align: center;
  font-size: font_size*3 px;
}

#gameboard{
  width: field_width px;
  height: field_width px;
  margin-left: auto;
  margin-right: auto;
  
  table{
    border-collapse: separate;
    cellspacing: 0;
    background-color:transparent;
  }

  table table td, input{
    overflow: hidden;
    border-spacing: box_spacing px;
    border-collapse: separate;
    background-color: lightTeal;
    width:tile_size px;
    height:tile_size px;
    margin:0;
    padding:0;
    border:0;
    color:white;
    text-align: center;
    vertical-align: middle;
    font-family: "Clear Sans", "Helvetica Neue", Arial, sans-serif;
    font-size:font_size px;
  }

  input{
    background-color: transparent;
  }

  input[type=number]::-webkit-inner-spin-button, 
  input[type=number]::-webkit-outer-spin-button { 
    -webkit-appearance: none;
  }

  .static {
    background-color: black;
    color: white;
  }

  table .conflict{
    background-color: darkRed;
  }

  .conflict td{
    background-color:red;
    .static{
      background-color: black;
    }
  } 
  
}

#controls{
  width: field_width px;
  margin-left: auto;
  margin-right: auto;
  padding:box_spacing px;
  button{
    margin: 1%;
    display: flex-box;
    border: 2px solid #1fbad6
    color: white;
    font-family: "Clear Sans", "Helvetica Neue", Arial, sans-serif;
    font-size: font_size px;
    border-radius: 4px;
    width: 45.5%;
    height: font_size * 2 px;
    vertical-align: middle;
    background-color: black;
    text-align: center;    
  }
}
